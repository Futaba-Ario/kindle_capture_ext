{
  "manifest_version": 3,
  "name": "Kindle Capture",
  "version": "1.0",
  "description": "Capture Kindle pages and convert to PDF",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "offscreen"
  ],
  "host_permissions": [
    "https://read.amazon.co.jp/*",
    "https://read.amazon.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://read.amazon.co.jp/*",
        "https://read.amazon.com/*"
      ],
      "js": ["src/content/content.js"]
    }
  ]
}
